= render '/shared/errors', resource: @question

= form_with model: @question do |f|
  .mb-3.row
    .col-sm-2.col-form-label
      = f.label :title
    .col-sm-10
      = f.text_field :title, class: 'form-control' 

  .mb-3.row
    .col-sm-2.col-form-label
      = f.label :body
    .col-sm-10
      = f.text_area :body, class: 'form-control'

  - if @question.files.attached?
    .mb-3.row
      .col-sm-2.col-form-label
        | Attached files:
      .col-sm-10
          ul.attached-files
            - @question.files.each do |file|
              li class="file-#{file.id}"
                = link_to file.filename.to_s, url_for(file)
                = link_to 'Ð¥', file_path(file), remote: true, class: 'ms-5', method: :delete, data: { confirm: 'Are you sure?', file_id: file.id }
  .mb-3.row
    .col-sm-2.col-form-label
      = f.label :files
    .col-sm-10
      = f.file_field :files, multiple: true

  .mb-3.row
    .col-sm-2.col-form-label
      = f.label :links
    .col-sm-10
      = f.fields_for :links do |l|
        p
          = l.label :name, 'Link name', class: "me-3"
          = l.text_field :name
        p
          = l.label :url, class: "me-3"
          = l.text_field :url

  div
    - submit_button_text = @question.new_record? ? 'Ask' : 'Save'
    = f.submit submit_button_text, class: 'btn btn-primary'
    - cancel_path = request.referer || root_path
    = link_to 'Cancel', cancel_path, class: 'btn btn-secondary ms-3'
